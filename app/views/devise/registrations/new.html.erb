<div class="container">
  <h2>SIGN UP</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "mb-3" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="mb-3 row">
      <%= f.label :full_name, class: "col-sm-2 col-form-label" %>
      <div class="col-sm-10">
        <%= f.text_field :full_name, autofocus: true, autocomplete: "name", class: "form-control" %>
      </div>
    </div>

    <div class="mb-3 row">
      <%= f.label :email, class: "col-sm-2 col-form-label" %>
      <div class="col-sm-10">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>
    </div>

    <div class="mb-3 row">
      <%= f.label :password, class: "col-sm-2 col-form-label" %>
      <div class="col-sm-10">
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
      </div>
    </div>

    <div class="mb-3 row">
      <%= f.label :password_confirmation, class: "col-sm-2 col-form-label" %>
      <div class="col-sm-10">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>
    </div>

    <div class="mb-3 row">
      <%= f.label :role, class: "col-sm-2 col-form-label" %>
      <div class="col-sm-10">
        <%= f.select :role, User.roles.keys.map { |role| [role.titleize, role] }, {}, class: "form-control" %>
      </div>
    </div>

    <div class="mb-3 row">
      <div class="col-sm-10 offset-sm-2">
        <%= f.submit "Sign up", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>
