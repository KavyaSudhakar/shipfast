<div class="container">
  <h1>Shipments</h1>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Item</th>
        <th>Source</th>
        <th>Target</th>
        <th>Status</th>
        <th>Delivery Partner</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% @shipments.each do |shipment| %>
        <tr>
          <td><%= shipment.item %></td>
          <td><%= shipment.source %></td>
          <td><%= shipment.target %></td>
          <td><%= shipment.status %></td>
          <td><%= shipment.delivery_partner.email if shipment.delivery_partner %></td>
          <td>
            <%= link_to 'Show', shipment, class: 'btn btn-info btn-sm' %>
            <%= link_to 'Edit', edit_shipment_path(shipment), class: 'btn btn-primary btn-sm' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to 'New Shipment', new_shipment_path, class: 'btn btn-primary' %>
</div>
